<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/theme_orange</item>
        <item name="colorAccent">#FF4081</item>
        <item name="actionBarSize">@dimen/actionbar_height</item>
        <item name="actionBarStyle">@style/Things_ActionBar</item>
        <item name="actionMenuTextAppearance">@style/Things_TitleStyle</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="actionDropDownStyle">@style/Things_DropDownStyle</item>
    </style>
    <style name="Things_ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/Things_TitleStyle</item>
    </style>
    <style name="Things_TitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Things_DropDownStyle" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:dropDownVerticalOffset">30dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--===================================above is system theme==================================-->

	<style name="text_in_login">
	    <item name="android:textColor">@color/theme_orange</item>
	    <item name="android:textSize">22sp</item>
	    <item name="android:gravity">center_vertical</item>
	</style>

	<style name="upload_input">
	    <item name="android:background">@color/white</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:paddingLeft">10dp</item>
	    <item name="android:paddingRight">10dp</item>
	    <item name="android:drawablePadding">10dp</item>
	    <item name="android:layout_marginTop">2dp</item>
	    <item name="android:layout_marginBottom">2dp</item>
	</style>
	
	<style name="text_in_personal_setting">
	    <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
	    <item name="android:layout_marginTop">2dp</item>
	    <item name="android:layout_marginBottom">2dp</item>
	    <item name="android:layout_marginLeft">10dp</item>
	</style>
	<style name="upload_input_in_personal_setting">
	    <item name="android:background">@color/white</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:paddingLeft">10dp</item>
	    <item name="android:layout_marginTop">2dp</item>
	    <item name="android:layout_marginBottom">2dp</item>
	    <item name="android:layout_marginLeft">10dp</item>
	    <item name="android:layout_marginRight">10dp</item>
	</style>
</resources>
